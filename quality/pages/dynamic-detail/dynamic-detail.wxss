/**dynamic.wxss**/

.container {
    padding: 0;
    font-size: 14rpx;
    background: #F0F4F3;
    color: #000;
}

.question {
    position: relative;
    width: 650rpx;
    padding: 40rpx 50rpx 30rpx;
    background: #d4237a;
    color: #fff;
    font-size: 38rpx;
    line-height: 48rpx;
}
.dynamicer-wrp{
    position: relative;
    width: 750rpx;
    height: 150rpx;
    background: #fff;
}
.dynamicer-wrp .bg-half{
    position: absolute;
    top: 0;
    width: 750rpx;
    height: 75rpx;
    background: #d4237a;
}
.dynamicer {
    position: relative;
    margin: 0 auto;
    width: 630rpx;
    height: 90rpx;
    padding: 30rpx;
    background: #fff;
    border: solid 1px #ebebeb;
    border-radius: 3px;
    box-shadow: 0 1px 2px #bebebe;
}
.flex-item{
  flex-grow: 1;
  text-align: center;
}
.flex-wrp{
  display: flex;
}
.flex-tab{
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}
.flex-item{
  flex-grow: 1;
  text-align: center;
}
.dynamicer .avatar {
    flex: 1;
    width: 90rpx;
    height: 90rpx;
}

.dynamicer .avatar image {
    display: inline-block;
    width: 90rpx;
    height: 90rpx;
    border-radius: 90rpx;
}
.dynamicer .dynamicer-info{
    flex: 5;
    text-align: left;
    padding: 10rpx 20rpx;
    line-height: 38rpx;
}
.dynamicer .dynamicer-info text{
    display: block;
}
.dynamicer .dynamicer-info .dynamicer-name{
    font-size: 32rpx;
    font-weight: bold;
}
.dynamicer .dynamicer-info .dynamicer-des{
    font-size: 24rpx;
    color: #808080;
    line-height: 28rpx;
}
.dynamicer .follow{
    flex: 2;
    padding: 15rpx 0;
    font-size: 22rpx;
}
.dynamicer .follow text{
    display: inline-block;
    padding: 15rpx 20rpx;
    color: #d4237a;
    border: solid 2px #d4237a;
    border-radius: 6rpx;
}
.dynamic-content{
    padding: 30rpx 40rpx;
    background: #ffffff;
}
.dynamic-content text{
    font-size: 32rpx;
    color: #454545;
    line-height: 44rpx;
}
.dynamic-content image{
    width: 100%;
    margin: 20rpx 0;
}
.dynamic-footer{
    position: fixed;
    bottom: 0;
    height: 70rpx;
    border-top: solid 1px #ebebeb;
    background: #ffffff;
    width: 670rpx;
    padding: 20rpx 40rpx;
}
.dynamic-footer .good image{
    display: inline-block;
    width: 38rpx;
    height: 38rpx;
    vertical-align: middle;
}

.dynamic-footer .operation-wrp{
    flex: 5;
}
.dynamic-footer .operation{
    justify-content: space-between;
    padding: 0 0 0 60rpx;
}
.dynamic-footer .operation-btn{
    flex: 1;
    text-align: center;
}
.dynamic-footer .operation image{
    display: block;
    margin: 0 auto;
    width: 50rpx;
    height: 50rpx;
}
.dynamic-footer .operation-btn text{
    display: block;
    font-size: 14rpx;
    color: #bebebe;
}
